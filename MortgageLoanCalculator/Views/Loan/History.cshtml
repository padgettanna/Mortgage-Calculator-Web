@model IEnumerable<MortgageLoanCalculator.Models.MortgageCalculationListItemViewModel>

@{
    ViewData["Title"] = "My Mortgage Calculations";
}

<h1 class="display-6">My Mortgage Calculations</h1>

@if (!Model.Any())
{
    <p class="text-muted">You have not saved any mortgage calculations yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Purchase Price</th>
                <th>Rate</th>
                <th>Term</th>
                <th>Total Monthly</th>
                <th>Income %</th>
                <th>Decision</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CreatedAt.ToLocalTime().ToString("MM/dd/yyyy")</td>
                    <td>@item.PurchasePrice.ToString("C")</td>
                    <td>@item.AnnualInterestRate.ToString("0.00")%</td>
                    <td>@Html.DisplayFor(m => item.Term)</td>
                    <td>@item.TotalMonthlyPayment.ToString("C")</td>
                    <td>@item.PaymentIncomeRatio.ToString("0.0")%</td>
                    <td>
                        <span class="badge @(item.Decision == "APPROVE" ? "badge-approved" : "badge-denied")">
                            @(item.Decision == "APPROVE" ? "Approved" : "Denied")
                        </span>
                    </td>
                    <td class="text-end">
                        <a asp-controller="Loan"
                           asp-action="Adjust"
                           asp-route-id="@item.SnapshotId"
                           class="btn btn-outline-primary btn-sm">
                            Adjust
                        </a>

                        <form asp-controller="Loan"
                              asp-action="Delete"
                              asp-route-id="@item.SnapshotId"
                              method="post"
                              class="d-inline"
                              onsubmit="return confirm('Delete this calculation?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
